@{
    var usernameCookie = Context.Request.Cookies["username"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EffectiveUsers.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="">
        @if (!string.IsNullOrEmpty(usernameCookie))
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbar-underline  bg-white shadow mb-3">
                <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Users" asp-action="Chart">
                    <img src="~/logo/user-login.svg" alt="Logo" width="30" height="30" class="d-inline-block align-text-top"> 
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Chart">Chart ข้อมูลสมาชิก</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">รายชื่อสมาชิก</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Chart">จัดการข้อมูลสมาชิก</a>
                            </li>
                    </ul> 
                    <ul class="navbar-nav   ml-auto flex-grow-0">
                    
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="About">เกี่ยวกับเรา</a>
                        </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">ออกจากระบบ</a>
                            </li>
                    </ul>
                </div>
            </div>
            </nav>
        } 
    </header>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @if (!string.IsNullOrEmpty(usernameCookie))
        {
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - EffectiveUsers 
        </div>
    </footer>
        }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
